@model SyncMe.ViewModels.ContentViewModel

@{
    ViewData["Title"] = "Editar Conteúdo";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-white border-0 pt-5 px-5 pb-0 text-center">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-warning bg-opacity-10 text-warning mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-pencil-square fs-3"></i>
                    </div>
                    <h2 class="fw-bold text-dark">Editar Conteúdo</h2>
                    <p class="text-muted small">Atualize as informações do artigo abaixo.</p>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Title" class="form-control bg-light border-0 fw-bold fs-5" placeholder="Título" style="height: 60px;" />
                                <label asp-for="Title" class="text-secondary">Título Principal</label>
                                <span asp-validation-for="Title" class="text-danger small ms-1"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Summary" class="form-label fw-bold text-muted small text-uppercase ls-1 ms-1">Resumo / Capa</label>
                                <textarea asp-for="Summary" class="form-control bg-light border-0" rows="3" style="resize: none;"></textarea>
                                <div class="d-flex justify-content-between mt-1">
                                    <span asp-validation-for="Summary" class="text-danger small ms-1"></span>
                                    <small class="text-muted bg-light px-2 rounded">Max 300 caracteres</small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ArticleBody" class="form-label fw-bold text-muted small text-uppercase ls-1 ms-1">Conteúdo Completo</label>
                                <textarea asp-for="ArticleBody" class="form-control bg-white border border-2" rows="12" style="border-color: #f0f2f5 !important;"></textarea>
                                <div class="d-flex justify-content-between mt-1">
                                    <span asp-validation-for="Summary" class="text-danger small ms-1"></span>
                                    <small class="text-muted bg-light px-2 rounded">Max 2000 caracteres</small>
                                </div>
                            </div>
                        </div>

                        <div class="bg-light bg-opacity-50 p-4 rounded-4 mb-4 border border-light">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3"><i class="bi bi-sliders me-2"></i>Classificação</h6>

                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label asp-for="CategoryId" class="form-label small text-muted ms-1">Categoria</label>
                                    <select asp-for="CategoryId" class="form-select border-0 shadow-sm" asp-items="Model.Categories">
                                        <option value="">Selecione...</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Difficulty" class="form-label small text-muted ms-1">Dificuldade</label>
                                    <select asp-for="Difficulty" class="form-select border-0 shadow-sm" asp-items="Html.GetEnumSelectList<SyncMe.Models.DifficultyLevel>()"></select>
                                    <span asp-validation-for="Difficulty" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="TrackId" class="form-label small text-muted ms-1">Trilha</label>
                                    <select asp-for="TrackId" class="form-select border-0 shadow-sm" asp-items="Model.Tracks">
                                        <option value="">Nenhuma</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-5">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3 ms-1"><i class="bi bi-image me-2"></i>Mídia e Capa</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="CoverImageUrl" class="form-control bg-light border-0" placeholder="https://..." />
                                        <label asp-for="CoverImageUrl">URL da Imagem</label>
                                    </div>
                                    <span asp-validation-for="CoverImageUrl" class="text-danger small ms-1"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="MediaUrl" class="form-control bg-light border-0" placeholder="https://..." />
                                        <label asp-for="MediaUrl">Link do YouTube</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-light rounded-pill px-4 fw-bold text-muted hover-bg-gray">Cancelar</a>
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 fw-bold shadow-sm transition-btn">
                                <i class="bi bi-save me-2"></i>Salvar Alterações
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}