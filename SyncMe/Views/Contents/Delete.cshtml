@model SyncMe.Models.Content
@using System.Text.RegularExpressions

@{
    ViewData["Title"] = "Confirmar Exclusão";

    // --- LÓGICA INTELIGENTE DE IMAGEM ---
    string? imageUrl = Model.CoverImageUrl;

    // Se não tem capa, tenta pegar a thumb do YouTube
    if (string.IsNullOrEmpty(imageUrl) && !string.IsNullOrEmpty(Model.MediaUrl)) {
        imageUrl = GetYouTubeThumbnail(Model.MediaUrl);
    }
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-5 text-center">

                    <div class="mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-danger bg-opacity-10 text-danger scale-icon" style="width: 80px; height: 80px;">
                            <i class="bi bi-exclamation-triangle-fill fs-1"></i>
                        </div>
                    </div>

                    <h2 class="fw-bold text-dark">Tem a certeza?</h2>
                    <p class="text-muted mb-4">
                        Está prestes a excluir permanentemente este conteúdo.
                    </p>

                    <div class="card border-0 bg-light rounded-4 mb-5 text-start overflow-hidden position-relative">
                        <div class="position-absolute top-0 start-0 bottom-0 bg-danger" style="width: 4px;"></div>

                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">

                                <div class="flex-shrink-0 me-4">
                                    @if (!string.IsNullOrEmpty(imageUrl)) {
                                        <img src="@imageUrl" alt="Capa" class="rounded-3 shadow-sm object-fit-cover" style="width: 120px; height: 120px;"
                                             onerror="this.onerror=null; this.src='https://via.placeholder.com/120x120?text=Sem+Img';">
                                    }
                                    else {
                                        <div class="rounded-3 bg-white border d-flex align-items-center justify-content-center shadow-sm" style="width: 120px; height: 120px;">
                                            <i class="bi bi-image text-muted fs-3 opacity-25"></i>
                                        </div>
                                    }
                                </div>

                                <div class="flex-grow-1 overflow-hidden">
                                    <h5 class="fw-bold text-dark mb-1 text-truncate">@Model.Title</h5>

                                    <div class="mb-2">
                                        <span class="badge bg-white text-dark border fw-normal me-1">@Model.Category?.Name</span>
                                        <span class="badge bg-white text-secondary border fw-normal">@Model.Difficulty</span>
                                    </div>

                                    <p class="text-muted small mb-0 fst-italic border-start border-3 ps-2" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                        "@Model.Summary"
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex gap-3 justify-content-center">
                        <input type="hidden" asp-for="Id" />

                        <a asp-action="Index" class="btn btn-light btn-lg rounded-pill px-4 fw-bold text-muted border-0 hover-bg-gray">
                            Cancelar
                        </a>

                        <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5 fw-bold shadow-danger-sm transition-btn">
                            <i class="bi bi-trash-fill me-2"></i>Sim, Excluir
                        </button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@functions {
    // Função para extrair a thumbnail do link do YouTube
    public string? GetYouTubeThumbnail(string? url) {
        if (string.IsNullOrEmpty(url)) return null;

        // Regex para pegar o ID do vídeo
        var regex = new Regex(@"(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^""&?\/\s]{11})");
        var match = regex.Match(url);

        // Retorna a URL da imagem (hqdefault.jpg é a miniatura de alta qualidade padrão)
        return match.Success ? $"https://img.youtube.com/vi/{match.Groups[1].Value}/hqdefault.jpg" : null;
    }
}