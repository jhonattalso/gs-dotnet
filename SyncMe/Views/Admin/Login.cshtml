@{
    ViewData["Title"] = "Login Administrativo";
}

<div class="d-flex align-items-center min-vh-100 py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-5">

                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                    <div class="card-body p-5">

                        <div class="text-center mb-5">
                            <h2 class="fw-bold text-dark mb-2" style="letter-spacing: -1px;">SyncMe</h2>
                            <p class="text-muted mb-0">Painel Administrativo</p>
                        </div>

                        <form asp-action="Login" method="post">
                            @if (ViewBag.Error != null) {
                                <div class="alert alert-danger alert-dismissible fade show small border-0 bg-danger bg-opacity-10 text-danger mb-4" role="alert">
                                    <i class="bi bi-exclamation-circle me-2"></i> @ViewBag.Error
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <div class="form-floating mb-3">
                                <input type="text" name="username" class="form-control bg-light border-0" id="floatingInput" placeholder="Usuário" style="height: 58px;" />
                                <label for="floatingInput" class="text-secondary">Usuário</label>
                            </div>

                            <div class="form-floating mb-4">
                                <input type="password" name="password" class="form-control bg-light border-0" id="floatingPassword" placeholder="Senha" style="height: 58px;" />
                                <label for="floatingPassword" class="text-secondary">Senha</label>
                            </div>

                            <div class="d-grid gap-2 mt-5">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill py-3 fw-bold shadow-sm transition-btn">
                                    ENTRAR
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer bg-white border-0 text-center py-3 mb-3">
                        <a href="/" class="text-decoration-none text-muted small opacity-75 hover-opacity-100">
                            &larr; Voltar para o site
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>